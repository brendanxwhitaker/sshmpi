#!/bin/bash
update_hostsfile
mapfile -t nodes < ~/.all_hosts
for node in "${nodes[@]}"
do
    scp ~/.ssh/config $node:~/.ssh/config &
    scp ~/.ssh/id_rsa $node:~/.ssh/id_rsa &
done
for node in "${nodes[@]}"
do
    ssh $node "update_hostsfile && pkill -e meadclient && rm mead.log" &
done
for node in "${nodes[@]}"
do
    ssh $node "pip uninstall -y mead-mpi && pip install git+git://github.com/brendanxwhitaker/mead.git && rm ~/client.log" &
done
git clone https://github.com/brendanxwhitaker/mead.git ~/pkgs/mead/
pip uninstall -y mead-mpi && pip install -e ~/pkgs/mead/
